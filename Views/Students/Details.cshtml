@model ProjectSecureCoding1.Models.Students

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Nim" class="btn btn-warning">Edit</a>
    <a href="javascript:void(0);" class="btn btn-danger"
        onclick="showDeleteModal('@Url.Action("Delete", new { id = Model.Nim })')">Delete</a>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
