@model IEnumerable<ProjectSecureCoding1.Models.Students>

@{
    ViewData["Title"] = "Students Page";
    int i = 1;
}

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center mb-4">Data Students</h1>
        <div class="d-flex justify-content-end">
            <a asp-controller="Students" asp-action="Create" class="btn btn-primary">Tambah</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nim</th>
                    <th scope="col">FullName</th>
                    <th scope="col">Address</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@student.Nim</td>
                        <td>@student.FullName</td>
                        <td>@student.Address</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = student.Nim })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Details", new { id = student.Nim })" class="btn btn-info">Details</a>
                            <a href="javascript:void(0);" class="btn btn-danger"
                                onclick="showDeleteModal('@Url.Action("Delete", new { id = student.Nim })')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>